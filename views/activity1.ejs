<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activity</title>

    <link rel="stylesheet" type="text/css" href="/css/styleHF.css">
    <link rel="stylesheet" type="text/css" href="/css/styleForm.css">
    <link rel="stylesheet" type="text/css" href="/css/styleActivities.css">
    <link rel="stylesheet" href="/css/styleHF_ALL.css">
    <link rel="stylesheet" type="text/css" href="/css/styleActivity1.css">

</head>
<body>

    <script src="https://kit.fontawesome.com/ee4053c9b9.js" crossorigin="anonymous"></script>

    <%- include("partials/headerPages.ejs") %>

    <div class="body">
    <div class="group">
        <h1 id="h">
          <% if(activity1!=="") { %>
          <h1><%= activity1[0].Header %></h1>
        <% }; %> 
      </h1>
        <span> <% if(activity1!=="") { %>
          <%=activity1[0].Days %>
          <% }; %> 
        </span> &nbsp;
        <span class ="rating">
          <% if(activity1 !== "") {%>
          <% if(activity1[0].Rate === "0") { %>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <% } %>
        <% if(activity1[0].Rate==="1") { %>
            <i class="fa-solid fa-star"></i>
            <% } %>
            <%  if(activity1[0].Rate==="2") { %>
             <i class="fa-solid fa-star"></i>
             <i class="fa-solid fa-star"></i>
             <% } %>
             <% if(activity1[0].Rate==="3") { %>
             <i class="fa-solid fa-star"></i>
             <i class="fa-solid fa-star"></i>
             <i class="fa-solid fa-star"></i>
             <% } %>
             <% if(activity1[0].Rate==="4") { %>
              <i class="fa-solid fa-star"></i>
             <i class="fa-solid fa-star"></i>
             <i class="fa-solid fa-star"></i>
             <i class="fa-solid fa-star"></i>
             <% } %>
             <% if(activity1[0].Rate==="5"){ %>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <% } %>
          <% } %>
        </span>
        &nbsp;
        <span>
          <% if(activity1!=="") {%>
            <%=activity1[0].Rate %> / 5
          <% } %>
        </span>
        &nbsp;
    </div>
    <br>
<div class="grid">
    <div class="mySlides">
        <div class="numbertext">1 / 3</div>
          <img src="/images/activities/<%=activity1[0].Picture[0]%>" style="width:100%">
      </div>
    
      <div class="mySlides">
        <div class="numbertext">2 / 3</div>
          <img src="/images/activities/<%=activity1[0].Picture[1]%>" style="width:100%">
      </div>
    
      <div class="mySlides">
        <div class="numbertext">3 / 3</div>
          <img src="/images/activities/<%=activity1[0].Picture[2]%>" style="width:100%">
      </div>
      
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
      
    <br>
    <div>
        <div class="text" >
          <% if(activity1!=="") {%>
            <h1><%=activity1[0].BriefDes %></h1>
          <% }; %> 
        </div>
    </div>
    <div>
        <h2><ins>DETAILS:</ins></h2>
        <h4>Full Description: </h4>
        <div class="w">
            <div>
              <% if(activity1!=="") {%>
                <h1><%=activity1[0].DetailedDes %></h1>
              <% }; %> 
             </div>
        </div>
        <h4>Plan: </h4>
        <div class="w">
                <div>
                  <% if(activity1!=="") {%>
                    <h1><%=activity1[0].Plan %></h1>
                  <% }; %> 
                </div>
        </div>
        <h4>About the Trip: </h4>
        <div class="w">
            <span><i class="fa-sharp fa-solid fa-xmark"></i></span>&nbsp
            <span class="more">
              <% if(activity1!=="") {%>
                <h1><%=activity1[0].CancelDet %></h1>
              <% }; %> 
              </span>
        </div>
        <div class="w">
            <span><i class="fa-regular fa-clock"></i></span>&nbsp
            <span class="more">
              <% if(activity1!=="") {%>
                <h1><%=activity1[0].Duration %></h1>
              <% }; %>
              </span>
        </div>
        <div class="w">
            <span><i class="fa-solid fa-bus"></i></span>&nbsp
            <span class="more"> 
              <% if(activity1!=="") {%>
                <h1><%=activity1[0].PickupDet %></h1>
              <% }; %>
              </span>
            </div>

    </div>

  

    <h2><ins>Select participants and date</ins></h2>
    <div class="book" id="book">
      <div>
        <input id="dropbtn" list="Adults" placeholder="Select number: ">
        <datalist id="Adults">
          <option value="1"></option>
          <option value="2"></option>
          <option value="3"></option>
          <option value="4"></option>
          <option value="5"></option>
          <option value="6"></option>
          <option value="7"></option>
          <option value="8"></option>
          <option value="9"></option>
          <option value="10"></option>
        </datalist>
        <div id="msg" class="check-error"></div>
      </div>
        <div>
          <!--<input id="dat" type="date" placeholder="Date" >
          <div id="date-msg" class="check-error"></div>-->

          <input id="dropbtn1" list="days" placeholder="Days Available">
          <datalist id="days">
            <%for(var j =0;j< activity1[0].AvailableDate.length; j++) {%>
            <option value=<%=activity1[0].AvailableDate[j] %>></option>
            <% } %>
          </datalist>
          <div id="date-msg" class="check-error"></div>
        </div>
        <div> 
          <button id="check" onclick="view()">Check Availability</button>
        </div>
       
        <script src="/js/Activity1.js"></script>
      </div>

      <div id="avail">
        <h2><ins>Available</ins></h2>
        <div class="duration">
        <span><strong>FROM: </strong></span>
        <span> <%=activity1[0].Starttime%></span>
        <div style="margin-top:6px"> </div>
        <span><strong>TO: </strong></span>
        <span> <%=activity1[0].Endtime%></span>
        </div>
        <div class ="price">
          <span>Total Price: </span>
          <span id="num1"> </span>
          <span>*</span>
          <span id="price1"><%=activity1[0].Price%></span>
          <span>=</span>
          <span id="total1"> </span>
      </div>
        
        <div style="text-align: center; margin-top:15px;">
          <button style="width:150px">Add To Cart</button>
        </div>

      </div>
      <script src="../public/js/Activity1.js"></script>


      <h2><ins>Reviews</ins></h2>
      
    <div class="first">
      <% if(activity1[0].Reviews!=="") { %>
        <% let start=0; %>
        <% while(start < activity1[0].Reviews.length) { %>
        <div class="reviews">
                <div class="rev">
                    <h6 class="R">Jan Erik L wrote a review <%=activity1[0].Reviews[start]%></h6>
                    <% start=start+1 %>
                </div>
                <div class="rating">
                  <% if(activity1[0].Reviews[start] === "0") { %>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <% } %>
                  <% if(activity1[0].Reviews[start]==="1") { %>
                    <i class="fa-solid fa-star"></i>
                    <% } %>
                    <%  if(activity1[0].Reviews[start]==="2") { %>
                     <i class="fa-solid fa-star"></i>
                     <i class="fa-solid fa-star"></i>
                     <% } %>
                     <% if(activity1[0].Reviews[start]==="3") { %>
                     <i class="fa-solid fa-star"></i>
                     <i class="fa-solid fa-star"></i>
                     <i class="fa-solid fa-star"></i>
                     <% } %>
                     <% if(activity1[0].Reviews[start]==="4") { %>
                      <i class="fa-solid fa-star"></i>
                     <i class="fa-solid fa-star"></i>
                     <i class="fa-solid fa-star"></i>
                     <i class="fa-solid fa-star"></i>
                     <% } %>
                     <% if(activity1[0].Reviews[start]==="5"){ %>
                      <i class="fa-solid fa-star"></i>
                      <i class="fa-solid fa-star"></i>
                      <i class="fa-solid fa-star"></i>
                      <i class="fa-solid fa-star"></i>
                      <i class="fa-solid fa-star"></i>
                      <% } %>
                </div>
                <% start=start+1 %>
                    <p class="R"><%=activity1[0].Reviews[start] %></p>
                    <% start=start+1 %>
          </div>
          <% } %>
          <% } %>
      </div>
    </div>

    <div class="addReviews">
      <form method="post" action="/activities/:<%=activity1[0].Name %>" id="form">
        <h3>Add Review</h3>
        <input type="text" name="activity" id="activity" value="<%=activity1[0].Name %>">
      <textarea cols="60" rows="5" id="addrev" name="addrev"></textarea>
      <h3>Rating</h3>
      <input id="dropbtn3" list="Rating" placeholder="Rating" name="rating">
          <datalist id="Rating">
            <option value="1"></option>
            <option value="2"></option>
            <option value="3"></option>
            <option value="4"></option>
            <option value="5"></option>
          </datalist>
      <div><button type="submit" id="sub" name="sub" >submit</button></div>

      </form>
    </div>

    <script src="/js/jazhotel.js"></script>

    <%- include("partials/footer.ejs") %>

</body>
</html>