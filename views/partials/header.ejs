<div class="signin" id="signin">
    <form class="sform">
      <div class="divclose">
        <button class="close" onclick="hide('signin')"><i class="fa fa-close"></i></button>
      </div>
        <div class="imgcontainer">
            <img src="../../public/images/homepage/avatar.png" alt="Avatar" class="avatar" width="100px" style="margin-left:37% ;margin-top:5%">
          </div>
        <div class="container">
          <div class="input-group">
            <label for="username">Username</label>
            <input id="username" type="text" placeholder="Enter Username" name="username">
            <span class="error-message"></span>
          </div>
          
          <div class="input-group">
            <label for="password1">Password</label>
            <input id="password1" type="password" placeholder="Enter Password" name="password" >
            <span class="error-message"></span>
          </div>
          <button class="subutton"><input type="submit" style="display: none;">Login</button>
        </div>
      
        <div class="container" style="background-color:#f1f1f1">
          <p class="message">Not Registered?</p>
          <button class="subutton" onclick="show('signup')" onclick="hide('signin')" type="button">Sign up</button>
        </div>
            
      </form>
</div>

  <div class="signup" id="signup">
    <form class="form">
      <div class="divclose2">
        <button class="close" onclick="hide('signup'); onclick=hide('signin')"><i class="fa fa-close"></i></button>
      </div>
      <div class="signuptitle">
            <h2>Sign Up To <br> EgyTours!</h2>
      </div>
      <div class="container">
        <div class="input-group">
          <label for="uname">Userame</label>
          <input id="uname" type="text" placeholder="Enter Userame" name="uname">
          <span class="error-message"></span>
        </div>
        
        <div class="input-group">
          <label for="femail">Email</label>
          <input id="femail" type="email" placeholder="Enter Email" name="email" >
          <span class="error-message"></span>
        </div>

        <div class="input-group">
          <label for="number">Phone Number</label>
          <input id="number" type="number" placeholder="Enter Phone Number" name="number">
          <span class="error-message"></span>
        </div>
        
        <div class="input-group">
          <label for="password">Password</label>
          <input id="password" type="password" placeholder="Enter Password" name="psw">
          <span class="error-message"></span>
        </div>

        <div class="input-group">
          <label for="password-confirmation">Password Confirmation</label>
          <input id="password-confirmation" type="password" placeholder="Repeat Password" name="psw">
          <span class="error-message"></span>
        </div>
    
        <input type="submit" class="subutton"></input>
      </div>
    </form>
    <script src="../../public/js/formsVal.js" type="text/javascript"></script>
  </div>