                            <textarea name="hotelName" id="hotelName" cols="60" rows="3"></textarea>
                        </div>
    
                        <div>
                            <h2>Location</h2>
                        </div>
                        <div>
                            <textarea name="hotelName" id="hotelName" cols="60" rows="3"></textarea>
