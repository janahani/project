                <div id="cont">
                    <div>
                        <h1>Edit Hotels</h1>
                    </div>

                    <div class="view">
                        <div id="search">
                            <div id="sBar">
                                <i id="sIcon" class="fa-sharp fa-solid fa-magnifying-glass"></i>
                                <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for Activities..">
