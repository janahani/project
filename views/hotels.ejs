<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotels</title>

    <link rel="stylesheet" type="text/css" href="/css/styleHotels.css">
    <link rel="stylesheet" type="text/css" href="/css/styleHF_ALL.css">
    <link rel="stylesheet" type="text/css" href="/css/styleForm.css">
    <style>
        #searchhotels {
            position: relative;
            border-radius: 10px;
            margin-top: 15px;
            margin-right: 20px;
            border: none;
            padding: 5px;
            width:90%;
            height:33px;
            box-sizing: border-box;
        }
        #searchhotels:focus {
            outline: 3px solid #ddd;
        }

        #search{
            float:right;
            width:40%;
        }

        #nomatch{
            display: none;
        }

    </style>
    <script>
        function filter(){
            var match = false;
            var query = document.getElementById('searchhotels').value.toUpperCase();
            var hotels = document.getElementsByClassName('btn');
            for (let index = 0; index < hotels.length; index++) {
                const element = hotels[index];
                var id = element.id.toUpperCase();
                if(id.includes(query)){
                    element.style.display='flex';
                    match = true;
                }
                else{
                    element.style.display='none';
                }
            }
            if(!match){
                document.getElementById('nomatch').style.display='block';
            }
            else{
                document.getElementById('nomatch').style.display='none';
            }
        }
    </script>
</head>

<body>
    <script src="https://kit.fontawesome.com/ee4053c9b9.js" crossorigin="anonymous"></script>

    <%- include("partials/headerPages.ejs") %>
        <div id="search">
            <input id="searchhotels" name="searchhotels" onkeyup=filter() type="text" placeholder="Search Hotels">
                <div id="searchResults" class="dropdown-content">
                </div>
        </div>

        <div id="parent">
            
            <% if(hotels!=="" ) {%>
                <% let id=1; %>
                <h1>Hotels</h1>
                    <% hotels.forEach((hotel)=> { %>
                        
                        <div id="nomatch">
                            <h2>Nothing matches your search...</h2>
                        </div>
                        <div class="btn" type="button" id="<%=hotel.Name%>" onclick="location.href= '/hotels/<%=hotel.Name%>'">
                            
                            <div class="image">
                                <img src="/images/Hotels/<%=hotel.Picture[0]%>">
                            </div>
                            
                            <div class="cols">
                                <h2 id='name' + <%=id %> name='title' class="h2hotels"><%=hotel.Name%>
                                </h2>
                                <% if(hotel.Reviews.length > 0){%>
                                <div class="rating">
                                    <%let revs = hotel.Reviews;%>
                                    <% let sum =0;%>
                                    <% revs.forEach((rev)=>{%>
                                        <%sum+= parseInt(rev.Rating);%>
                                    <%})%>
                                    <%let avg = sum/ (hotel.Reviews.length)%>
                                    <% if(parseInt(avg) > 0){%>
                                        <% for (let i = 0; i < avg; i++) {%>
                                            <i class="fa-solid fa-star"></i>
                                        <%}%>
                                        <div>
                                            
                                            <p><span><i class="fa-sharp fa-solid fa-comments" style="color:black"></i></span><%=hotel.Reviews.length%> Reviews</p>
                                            
                                        </div>
                                        
                                </div>
                                <%}%>
                                <%}else{%>
                                    <div>
                                        <p>No Reviews Yet</p>
                                    </div>
                                <%}%>
                                <div>
                                    <p>
                                        <span><i class="fa-sharp fa-solid fa-location-dot"></i></span> <%=hotel.Location%>
                                    </p>
                                </div>
                                <div>
                                    <p>
                                        <span><i class="fa-sharp fa-solid fa-circle-info"></i></span>
                                        <%=hotel.Caption%>
                                        <p>Read more..</p>
                                    </p>
                                </div>
                            </div>
                        </div>


                    <% id++; %>
                <% }); %>
            <% } %>
        </div>


        <%- include("partials/footer.ejs") %>

</body>

</html>