    .admin button:hover {
        background-color: rgb(214, 53, 17);
        color: white;
    }

    #dropdown {
        height: 200px;
    }


    #searchbar:focus {
        outline: 3px solid #ddd;
    }


    /* Dropdown Content (Hidden by Default) */
    .dropdown-content {
        position: relative;
        background-color: #f6f6f6;
        width: 31.5%;
        float: right;
        top: 52.5%;
        left: 31.3%;
        z-index: 0;
        border-radius: 10px;

    }

    /* Links inside the dropdown */
    #searchItem {
        background-color: #f9f9f9;
        padding: 9px 16px;
        text-decoration: none;
        display: block;
        color: rgb(48, 31, 22);
        border-radius: 10px;
    }

    #s {
        color: rgb(133, 133, 133);
    }

    /* Change color of dropdown links on hover */
    #searchItem:hover {
        background-color: #e4e3e3;
        color: orangered;
    }

    .sticky .dropdown-content {
        top: 61%;
    }

</style>

