<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Hotel</title>
    <link rel="stylesheet" href="../css/styleAdminDashboard.css">
    <link rel="stylesheet" href="../css/styleAddHotel.css">

</head>

<body>
    <div class="h">
        <div class="admin">ADMIN</div>
    </div>

    <div class="main-content">

        <%- include("partials/adminHeader.ejs") %>

            <div class="right">
                <div id="container">
                    <form id="hotel" method="post" action="/AddHotel" enctype="multipart/form-data">
                        <div>
                            <label for="name">
                                <h2>Hotel Name</h2>
                            </label>
                            <textarea name="name" id="name" cols="60" rows="2"></textarea>
                            <p class='error-message' id="error-name">
                                </p]>
                        </div>

                        <div>
                            <label for="location">
                                <h2>Location</h2>
                            </label>
                            <textarea name="location" id="location" cols="60" rows="3"></textarea>
                            <p class='error-message' id="error-loc"></p>
                        </div>
                        <div>
                            <h2>Images</h2>
                        </div>
                        <div>
                            <div>
                                <input type="file" id="imgs" name="imgs" multiple>
                            </div>
                            <span class='error-message' id="error-imgs"></span>
                        </div>


                        <div>
                            <h2>About</h2>
                        </div>
                        <div>
                            <textarea name="about" id="about" cols="150" rows="15"></textarea>
                            <span class='error-message' id="error-about"></span>
                        </div>


                        <div id="items">
                            <div>
                                <h2>Property Amenities</h2>
                            </div>
                            <div>
                                <div>
                                    <ul id="li1"></ul>
                                </div>
                                <textarea name="finalamens" id="finalamens" cols="15" rows="5"
                                    style="display: none;"></textarea>
                                <input type="text" id="addedamen" name="propamentext">
                                <button class='plus' id="add" type='button'
                                    onclick="addItem('addedamen','finalamens','amenlinew','li1','erroramen')">+</button>
                                <span class='error-message' id="erroramen"></span>
                            </div>

                            <div>
                                <h2>Room Features</h2>
                            </div>
                            <div>
                                <div>
                                    <ul id="li2"></ul>
                                </div>
                                <textarea name="finalfeats" id="finalfeats" cols="15" rows="5"
                                    style="display: none;"></textarea>
                                <input type="text" id="addedfeat" name="roomfeattext">
                                <button class='plus' id="add2" type='button'
                                    onclick="addItem('addedfeat','finalfeats','featlinew','li2','errorfeat')">+</button>
                                <span class='error-message' id="errorfeat" style="color:red"></span>
                            </div>

                            <div>
                                <h2>Room Types</h2>
                            </div>
                            <div>
                                <div>
                                    <ul id="li3"></ul>
                                </div>

                                <div id="addtype">
                                    <input type="text" id="addedtype" name="roomtypetext">
                                    <button class='plus' id="add" type='button'
                                        onclick="addType('typelinew','li3')">+</button>

                                </div>

                                <div id="showprice" style="display: none;">
                                    <h4>Enter price per night </h4>
                                    <input type="text" id="price" name="typeprice">
                                    <button class='plus' id="done" type='button' style="width:100px"s>done</button>

                                </div>
                                <span class='error-message' id="errortype"></span>
                                <span id="success" style="color:green"></span>

                                <textarea name="finalprices" id="finalprices" cols="15" rows="5"
                                    ></textarea>
                                <textarea name="finaltypes" id="finaltypes" cols="15" rows="5"
                                   ></textarea>

                            </div>
                        </div>

                        <div id="buttons">
                            <button type="submit"
                                style="width:120px; margin-top: 15px; height:35px; border-radius: 17px;">Submit</button>
                        </div>
                    </form>
                </div>

            </div>
    </div>

    <script src="../js/addHotelJS.js"></script>
</body>

</html>