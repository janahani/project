    .sign button {
        color: rgb(54, 36, 27);
        background-color: white;
        border: none;
        cursor: pointer;
        font-weight: bold;
        width: 80px;
        border-radius: 10px;
        height: 30px;
        padding: 0;
    }

    .sign button:hover {
        background-color: rgb(214, 53, 17);
        color: white;
    }

    .admin {
        flex: 5%;
        margin-top: 1.5%;
    }

    .admin button {
        color: rgb(54, 36, 27);
