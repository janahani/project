<script src="https://kit.fontawesome.com/ee4053c9b9.js" crossorigin="anonymous"></script>
<style>
    #searchbar {
        position: relative;
        top: 25%;
        border-radius: 10px;
        border: none;
        padding:5px;
        width:30%;
    }
    .nav {
        position: relative;
        top: 20%;
    }

    .sign {
        position: relative;
        top: 21%;
    }

    .sign button {
        color: rgb(54, 36, 27);
        background-color: white;
        border: none;
        cursor: pointer;
        font-weight: bold;
        width: 80px;
        border-radius: 10px;
        height: 30px;
        padding: 0;
    }
    .sign button:hover{
        background-color:rgb(214, 53, 17);
        color:white;
    }
</style>

<div class="bgVisit">
    <header class="myHeader" id="myHeader" style="display: flex;">
        <div class="logoHead" style="flex:10%;">
            <img id="logo" src="/images/homepage/logo.png" alt="logo" width="100px">
        </div>

        <div style="flex:70%">
            <input id="searchbar" type="text" placeholder="Search" style="float: right;">
        </div>


        <nav style="flex:13%" class="nav">

            <a href="/aboutus" class="links"> <i class="fa-sharp fa-solid fa-circle-info"></i> </a>
            <a href="/cart" class="links"> <i class="fa-solid fa-cart-shopping"></i></a>
            <a href="/" class="links"> <i class="fa-solid fa-house fa-fw"></i> </a>
        </nav>
        <div style="flex:7%" class="sign">


            <% if(user==="" ){ %>
                <span><button onclick="show('signin')">Sign In</button> </span>
                <%} else{%>
                    <div calss="dropdown" onmouseleave="hideDropdown()" onmouseenter="displayDropdown()">
                        <button class="dropbtn">
                            <%=user.Username%>
                        </button>
                        <div id="dropdown-content">
                            <div class="de">
                                <a href="/profile">My Profile</a>
                            </div>
                            <div class="de">
                                <a href="#" onclick="handleLogout()">logout</a>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <% if(user!=="" && user.Type==="admin" ){%>
                            <span class="admin">
                                <a href="/adminboard"> Admin </a>
                            </span>
                            <% } %>
        </div>



    </header>

    <div class="slogan">
        <h2> Discover An All New Egypt</h2>
    </div>

    <div class="buttons">
        <button onclick="location.href='hotels';"> <i class="fa fa-thumbs-up"></i> Hotels</button>
        <button onclick="location.href='activities';"> <i class="fa-solid fa-person-running"></i>Activities</button>
    </div>
</div>

<script src="/js/homepageJS.js" type="text/javascript"></script>

<div class="signin" id="signin">
    <form class="sform" method="post" action="/login">
        <div class="divclose">
            <button type="button" class="close" onclick="hide('signin')"><i class="fa fa-close"></i></button>
        </div>
        <div class="imgcontainer">
            <img src="/images/homepage/avatar.png" alt="Avatar" class="avatar" width="100px"
                style="margin-left:37% ;margin-top:5%">
        </div>
        <div class="container">
            <div class="input-group">
                <label for="username">Username</label>
                <input id="username" type="text" placeholder="Enter Username" name="username">
                <span class="error-message" id="un"></span>
            </div>

            <div class="input-group">
                <label for="password1">Password</label>
                <input id="password1" type="password" placeholder="Enter Password" name="password">
                <span class="error-message" id="pass"></span>
            </div>
            <button class="subutton"><input type="submit" style="display: none;">Login</button>
        </div>

        <div class="container" style="background-color:#f1f1f1">
            <p class="message">Not Registered?</p>
            <button class="subutton" onclick="show('signup')" onclick="hide('signin')" type="button">Sign up</button>
        </div>

    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="/js/ajax-UN.js"></script>

<script src="/js/popupJS.js" type="text/javascript"></script>
<div class="signup" id="signup">
    <form class="form" method="post" action="">
        <div class="divclose2">
            <button type="button" class="close" onclick="hide('signup'); onclick=hide('signin')"><i
                    class="fa fa-close"></i></button>
        </div>
        <div class="signuptitle">
            <h2>Sign Up To <br> EgyTours!</h2>
        </div>
        <div class="container">
            <div class="input-group">
                <label for="uname">Username</label>
                <input id="uname" type="text" placeholder="Enter Username" name="uname">
                <span class="error-message" id="result"></span>
            </div>

            <div class="input-group">
                <label for="femail">Email</label>
                <input id="femail" type="email" placeholder="Enter Email" name="email">
                <span class="error-message"></span>
            </div>

            <div class="input-group">
                <label for="number">Phone Number</label>
                <input id="number" type="text" placeholder="Enter Phone Number" name="number">
                <span class="error-message"></span>
            </div>

            <div class="input-group">
                <label for="password">Password</label>
                <input id="password" type="password" placeholder="Enter Password" name="psw">
                <span class="error-message"></span>
            </div>

            <div class="input-group">
                <label for="password-confirmation">Password Confirmation</label>
                <input id="password-confirmation" type="password" placeholder="Repeat Password" name="confpsw">
                <span class="error-message"></span>
            </div>

            <input type="hidden" name="type" value="client">
            <span id="error"></span>

            <button type="submit" class="subutton" id="sub">Sign Up</button>
        </div>
    </form>
    <script src="/js/formsVal.js" type="text/javascript"></script>
    <script src="/js/popupJS.js" type="text/javascript"></script>
</div>