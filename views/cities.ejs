<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">



    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/weather.css">
    <script src="/js/weather2.js" defer></script>
    <link rel="stylesheet" href="/css/styleHF_ALL.css">
    <link rel="stylesheet" href="/css/styleActivities.css">
    <link rel="stylesheet" href="/css/styleCity.css">
    <link rel="stylesheet" href="/css/user/styleForm.css">
</head>

<body>
    <%- include("partials/headerPages.ejs") %>
        <div>
            <div class="page-title">
                <img src="/images/cities/<%=city.picture[0]%>" alt="<%=city.Name%>" id="mainpic">
                <div class="title-text">
                    <h3>Things to do in</h3>
                    <h1>
                        <%=city.Name%>,Egypt
                    </h1>
                </div>
            </div>
        </div>


        <!-- weather -->
        <div weather-api-body>

            <div class="weather-card">
                <div class="search">
                    <input class="search-bar" type="text" placeholder="Enter City Name">
                    <button><svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 1024 1024"
                            height="1.5em" width="1.5em" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M909.6 854.5L649.9 594.8C690.2 542.7 712 479 712 412c0-80.2-31.3-155.4-87.9-212.1-56.6-56.7-132-87.9-212.1-87.9s-155.5 31.3-212.1 87.9C143.2 256.5 112 331.8 112 412c0 80.1 31.3 155.5 87.9 212.1C256.5 680.8 331.8 712 412 712c67 0 130.6-21.8 182.7-62l259.7 259.6a8.2 8.2 0 0 0 11.6 0l43.6-43.5a8.2 8.2 0 0 0 0-11.6zM570.4 570.4C528 612.7 471.8 636 412 636s-116-23.3-158.4-65.6C211.3 528 188 471.8 188 412s23.3-116.1 65.6-158.4C296 211.3 352.2 188 412 188s116.1 23.2 158.4 65.6S636 352.2 636 412s-23.3 116.1-65.6 158.4z">
                            </path>
                        </svg></button>
                </div>
                <div class="weather loading">
                    <h2 class="city">Weather in Cairo</h2>
                    <h1 class="temp">43°C</h1>
                    <div class="flex">
                        <img src="https://openweathermap.org/img/wn/04n.png" alt="weather picture" class="icon" />
                        <div class="description">Sunny</div>
                    </div>
                    <div class="humidity"> Humidity: 30%</div>
                    <div class="wind"> Wind speed: 5 km/h</div>
                </div>

            </div>



        </div>




        <h1 class="head">
            <%=city.Name%> Activities
        </h1>


        <div class="first">
            <% if(activities!=="" ) { %>
                <% let id=1; %>
                    <% activities.forEach((activity)=> { %>
                        <div class="btn" onclick="location.href= '/activities/<%=activity.Name%>'">
                            <div>
                                <img src="/images/activities/<%=activity.Picture[1]%>" width="300 px" height="200 px"
                                    class="img">
                            </div>

                            <div>
                                <h5>
                                    <%=activity.Type%>
                                </h5>
                                <h4>
                                    <%=activity.Header%>
                                </h4>
                                <h5>
                                    <%=activity.Duration%>
                                </h5>
                                <h5><mark>
                                        <%=activity.Advantage%>
                                    </mark></h5>
                            </div>
                            <div>
                                <% if(activity.Rate==="0" ) { %>
                                    <i class="fa-regular fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                    <% } %>
                                        <% if(activity.Rate==="1" ) { %>
                                            <i class="fa-solid fa-star"></i>
                                            <% } %>
                                                <% if(activity.Rate==="2" ) { %>
                                                    <i class="fa-solid fa-star"></i>
                                                    <i class="fa-solid fa-star"></i>
                                                    <% } %>
                                                        <% if(activity.Rate==="3" ) { %>
                                                            <i class="fa-solid fa-star"></i>
                                                            <i class="fa-solid fa-star"></i>
                                                            <i class="fa-solid fa-star"></i>
                                                            <% } %>
                                                                <% if(activity.Rate==="4" ) { %>
                                                                    <i class="fa-solid fa-star"></i>
                                                                    <i class="fa-solid fa-star"></i>
                                                                    <i class="fa-solid fa-star"></i>
                                                                    <i class="fa-solid fa-star"></i>
                                                                    <% } %>
                                                                        <% if(activity.Rate==="5" ){ %>
                                                                            <i class="fa-solid fa-star"></i>
                                                                            <i class="fa-solid fa-star"></i>
                                                                            <i class="fa-solid fa-star"></i>
                                                                            <i class="fa-solid fa-star"></i>
                                                                            <i class="fa-solid fa-star"></i>
                                                                            <% } %>
                            </div>
                            <div>
                                <h3>From E£ <%=activity.Price%> per person</h3>
                            </div>
                        </div>
                        <% id++; %>
                            <% }); %>
                                <% } %>
        </div>
        <h1 class="head">
            <%=city.Name%> Hotels
        </h1>
        <div class="first">
            <% if(hotels!=="" ) { %>
                <% let id1=1; %>
                    <% hotels.forEach((ht)=> { %>
                        <div class="btn">
                            <div>
                                <img src="/images/Hotels/<%=ht.Picture[0]%>" width="300 px" height="200 px" class="img">
                            </div>

                            <div>
                                <h5>
                                    <%=ht.Name%>
                                </h5>
                                <h4>
                                    <%=ht.Location%>
                                </h4>
                                <h5>
                                    <%=ht.PropertyAmen%>
                                </h5>
                                <h5>
                                    <%=ht.RoomFeatures%>
                                </h5>
                            </div>


                        </div>
                        <% id1++; %>
                            <% }); %>
                                <% } %>
        </div>


        <script src="/js/weather2.js" defer></script>


        <%- include("partials/footer.ejs") %>

</body>

</html>